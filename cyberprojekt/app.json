{
  "expo": {
    "name": "CYBERPROJEKT: NETRUNNER",
    "slug": "cyberprojekt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.cyberprojekt",
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Permitir autenticação com Face ID."
      }
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.anonymous.cyberprojekt",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0e27"
      },
      "icon": "./assets/images/icon.png"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-font",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permitir autenticação com Face ID."
        }
      ],
      "expo-secure-store"
    ],
    "scheme": "cyberprojekt",
    "extra": {
      "eas": {
        "projectId": "e1626de8-d919-4bf3-91b6-48d78b72b89b"
      }
    }
  }
}
